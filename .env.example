# GoSIP Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
GOSIP_HTTP_PORT=8080
GOSIP_SIP_PORT=5060
GOSIP_LOG_LEVEL=info
GOSIP_DEV_MODE=false

# External IP for SIP (required for NAT traversal)
# Set this to your public IP address
GOSIP_EXTERNAL_IP=

# Data Directory
GOSIP_DATA_DIR=./data
GOSIP_DB_PATH=./data/gosip.db

# Twilio Configuration (set via web UI, but can be pre-configured)
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token

# SMTP Configuration (optional, for email notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_password
# SMTP_FROM=noreply@example.com

# Gotify Configuration (optional, for push notifications)
# GOTIFY_URL=https://gotify.example.com
# GOTIFY_TOKEN=your_gotify_token

# TLS/Encryption Configuration
# Enable TLS for encrypted SIP (SIPS) on port 5061
GOSIP_TLS_ENABLED=false
GOSIP_TLS_PORT=5061
GOSIP_TLS_WSS_PORT=5081
# Set to true to ONLY accept encrypted connections (disable port 5060)
GOSIP_TLS_DISABLE_UNENCRYPTED=false
# Certificate mode: "acme" for Let's Encrypt, "manual" for custom certificates
GOSIP_TLS_CERT_MODE=acme
# Manual certificate paths (when GOSIP_TLS_CERT_MODE=manual)
# GOSIP_TLS_CERT_FILE=/path/to/cert.pem
# GOSIP_TLS_KEY_FILE=/path/to/key.pem
# GOSIP_TLS_CA_FILE=/path/to/ca.pem
# Minimum TLS version: "1.2" or "1.3"
GOSIP_TLS_MIN_VERSION=1.2

# ACME/Let's Encrypt Configuration (when GOSIP_TLS_CERT_MODE=acme)
# GOSIP_ACME_EMAIL=admin@example.com
# GOSIP_ACME_DOMAIN=sip.example.com
# GOSIP_ACME_CA=staging  # "staging" for testing, "production" for real certs

# Cloudflare DNS Challenge (for ACME with wildcard or internal domains)
# CLOUDFLARE_DNS_API_TOKEN=your_cloudflare_api_token

# SRTP Media Encryption
GOSIP_SRTP_ENABLED=false
GOSIP_SRTP_PROFILE=AES_CM_128_HMAC_SHA1_80

# Timezone
TZ=America/New_York
